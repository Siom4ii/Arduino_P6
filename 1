#include <Servo.h>
#include <LiquidCrystal_I2C.h>

// -------- PIN DEFINITIONS --------
#define TRIG_FRONT 8   // Ultrasonic #1 (front, hand detector)
#define ECHO_FRONT 7

#define TRIG_TOP   4   // Ultrasonic #2 (top, level detector)
#define ECHO_TOP   3

#define SERVO_PIN  9   // Servo for lid

// -------- CONFIGURABLE CONSTANTS --------
#define OPEN_DISTANCE 20    // cm: hand distance to open lid
#define LID_CLOSED_ANGLE 0  // adjust if your servo orientation differs
#define LID_OPEN_ANGLE   90 // adjust for fully open lid

// Measure from TOP sensor to BOTTOM of bin (cm)
#define BIN_HEIGHT_CM 40    // <-- CHANGE THIS to your real bin height

// Smart delay (lid stays open this long after last hand detection)
const unsigned long LID_DELAY = 3000; // 3 seconds

// -------- OBJECTS --------
Servo lidServo;
// Common I2C address is 0x27, if nothing shows on LCD, try 0x3F
LiquidCrystal_I2C lcd(0x27, 16, 2);

// -------- GLOBAL VARIABLES --------
int distanceFront = 0;
int distanceTop   = 0;
int fillPercent   = 0;
bool lidOpen = false;

unsigned long lidOpenTime = 0; // last time we saw a hand / opened lid

// -------- FUNCTIONS --------

// Generic ultrasonic distance in cm
int getDistance(int trigPin, int echoPin) {
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);

  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);

  long duration = pulseIn(echoPin, HIGH, 30000); // timeout ~5m

  if (duration == 0) {
    // no echo detected
    return 999;
  }

  int dist = duration * 0.034 / 2; // speed of sound ~0.034 cm/us
  return dist;
}

// Compute trash fill percent from top distance
int computeFillPercent(int distTop) {
  // invalid reading → assume empty
  if (distTop <= 0 || distTop > BIN_HEIGHT_CM + 20) {
    return 0;
  }

  // very close to sensor → treat as full
  if (distTop < 5) {
    return 100;
  }

  float filledHeight = BIN_HEIGHT_CM - distTop;
  float pct = (filledHeight / BIN_HEIGHT_CM) * 100.0;

  if (pct < 0) pct = 0;
  if (pct > 100) pct = 100;

  return (int)pct;
}

// -------- SETUP --------
void setup() {
  Serial.begin(9600);

  pinMode(TRIG_FRONT, OUTPUT);
  pinMode(ECHO_FRONT, INPUT);

  pinMode(TRIG_TOP, OUTPUT);
  pinMode(ECHO_TOP, INPUT);

  lidServo.attach(SERVO_PIN);
  lidServo.write(LID_CLOSED_ANGLE);
  lidOpen = false;

  // LCD init
  lcd.init();
  lcd.backlight();
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Smart Trash Bin");
  lcd.setCursor(0, 1);
  lcd.print("Initializing...");
  delay(2000);
  lcd.clear();

  Serial.println("Smart Trash Bin with LCD & Level Ready");
}

// -------- MAIN LOOP --------
void loop() {
  unsigned long currentTime = millis();

  // 1) Read sensors
  distanceFront = getDistance(TRIG_FRONT, ECHO_FRONT);
  distanceTop   = getDistance(TRIG_TOP, ECHO_TOP);
  fillPercent   = computeFillPercent(distanceTop);

  // Debug prints
  Serial.print("Front: ");
  Serial.print(distanceFront);
  Serial.print(" cm | Top: ");
  Serial.print(distanceTop);
  Serial.print(" cm | Fill: ");
  Serial.print(fillPercent);
  Serial.println("%");

  // 2) SMART LID LOGIC (no blocking delay)

  // Hand detected → open lid (if not already open) and reset timer
  if (distanceFront > 0 && distanceFront < OPEN_DISTANCE) {
    if (!lidOpen) {
      Serial.println("Hand detected! Opening lid...");
      lidServo.write(LID_OPEN_ANGLE);
      lidOpen = true;
    }
    lidOpenTime = currentTime; // refresh "last seen hand" time
  }

  // If lid is open and enough time passed since last hand → close lid
  if (lidOpen && (currentTime - lidOpenTime >= LID_DELAY)) {
    Serial.println("Closing lid...");
    lidServo.write(LID_CLOSED_ANGLE);
    lidOpen = false;
  }

  // 3) Update LCD (always responsive)
  lcd.setCursor(0, 0);
  lcd.print("Level:");
  // simple spacing formatting
  if (fillPercent < 10)      lcd.print("  ");
  else if (fillPercent < 100) lcd.print(" ");
  lcd.print(fillPercent);
  lcd.print("%   "); // extra spaces clear old chars

  lcd.setCursor(0, 1);
  lcd.print("Lid: ");
  if (lidOpen) {
    lcd.print("OPEN  ");
  } else {
    lcd.print("CLOSED");
  }

  // Optional warning when almost full
  if (fillPercent >= 80) {
    Serial.println("WARNING: Bin almost full!");
  }

  delay(150); // small refresh delay, does NOT break behavior
}
